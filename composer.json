{
  "name": "leowebguy/copy-field",
  "description": "A minimal click copy field for Craft CP",
  "keywords": [
    "craftcms",
    "copy",
    "quick copy",
    "click copy",
    "field",
    "cp"
  ],
  "version": "1.0.1",
  "type": "craft-plugin",
  "license": "proprietary",
  "authors": [
    {
      "name": "Leo",
      "homepage": "https://github.com/leowebguy"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "craftcms/cms": "^5.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main",
    "laravel/pint": "^1.14.0"
  },
  "autoload": {
    "psr-4": {
      "leowebguy\\copyfield\\": "src/"
    }
  },
  "extra": {
    "name": "Copy Field",
    "handle": "copy-field",
    "class": "leowebguy\\copyfield\\Plugin"
  },
  "config": {
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "cs": "vendor/bin/ecs check src --ansi",
    "fix-cs": "vendor/bin/ecs check src --ansi --fix",
    "stan": "vendor/bin/phpstan analyse src",
    "rector": "vendor/bin/rector process src --config vendor/craftcms/rector/sets/craft-cms-50.php",
    "pint": "vendor/bin/pint -v src"
  }
}
